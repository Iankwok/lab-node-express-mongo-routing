<fieldset>
  <legend>Recipe App</legend>
  <form method="POST" action="/recipes">
    <div class="form-group col-md-4">
      <input name="recipes[name]" class="form-control" placeholder="Name"/>
    </div>
    <div class="form-group col-md-4">
      <input name="recipes[ingredients]"  class="form-control" placeholder="Ingredients"/>
    </div>
        <div class="form-group col-md-4">
      <input name="recipes[img]"  class="form-control" placeholder="Image URL"/>
    </div>
    <div class="form-group col-md-4">
      <button class="btn btn-success col-md-12">Add a Recipe</button>
    </div>
  </form>
</fieldset>

<% recipes.forEach( function(recipe){ %>
  <div>
    <h2><%= recipe.name %></h2>
    <b>Ingredients :  </b> <%= recipe.ingredients %>
    <b>Image:  </b><%= recipe.img %>
    <img src="<%= recipe.showPhoto() %>" />
  </div>
  <form method="PUT" action="/recipes/<%= recipe.id%>/edit">
    <button class="btn btn-warning">
      <span class="ion-edit"></span>
    </button>
  </form>
  <form method="POST" action="/recipes/<%= recipe.id%>/delete">
    <button class="btn btn-danger">
      <span class="ion-close-circled"></span>
    </button>
  </form>
<% }) %>
